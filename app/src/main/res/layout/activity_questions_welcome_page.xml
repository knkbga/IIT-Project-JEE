<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.nitin.myapp.QuestionsWelcomePage">

    <LinearLayout
        android:paddingLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/startTestButton"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/terms"
            android:id="@+id/checkBoxTerms" />

        <TextView
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="253dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="I Agree to the above conditions."
            android:textSize="15dp"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/instructions"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:text="Instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:padding="16dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/instruction_title"
            android:textAlignment="center"
            android:textColor="#bababa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction_title"/>

        <RelativeLayout
            android:layout_below="@+id/instruction_title"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_1"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:text="@string/instruction_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:layout_below="@+id/instruction_1"
                android:id="@+id/instruction_2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:text="@string/instruction_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_3"
                android:layout_below="@+id/instruction_2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:text="@string/instruction_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_4"
                android:layout_below="@id/instruction_3"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:text="@string/instruction_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!--<WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webViewInstructions"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/linearLayout2" />-->

    <Button
        android:background="#73d987"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Start Test"
        android:textColor="#ffff"
        android:id="@+id/startTestButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
